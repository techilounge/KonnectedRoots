rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and update their own profile.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Rules for the 'trees' collection
    match /trees/{treeId} {
      // A user can create a tree if they are logged in.
      allow create: if request.auth != null;
      
      // A user can read, update, or delete a tree if they are the owner.
      allow read, update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;

      // Rules for the 'people' subcollection within a tree
      match /people/{personId} {
        // A user can read/write people in a tree they own.
        allow read, write, delete: if request.auth != null && get(/databases/$(database)/documents/trees/$(treeId)).data.ownerId == request.auth.uid;
      }
    }
    
    // TEMPORARY RULE for data migration
    // This allows the owner of a person document in the old 'people' collection
    // to read and delete it during the migration process.
    match /people/{personId} {
       allow read, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
  }
}
