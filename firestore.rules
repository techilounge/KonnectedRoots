rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own user profile
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Trees can be read by anyone if public, otherwise only by the owner.
    // Owners can write to their own trees.
    match /trees/{treeId} {
      allow read: if resource.data.visibility == 'public' || request.auth.uid == resource.data.ownerId;
      allow write: if request.auth.uid == resource.data.ownerId;

      // People subcollection can be read/written by the owner of the parent tree.
      match /people/{personId} {
        allow read, write: if request.auth.uid == get(/databases/$(database)/documents/trees/$(treeId)).data.ownerId;
      }
    }
    
    // This rule is specifically for the one-time data migration.
    // It allows an authenticated user to read from the old top-level people collection.
    match /people/{personId} {
      allow read, delete: if request.auth != null;
    }
  }
}
