rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthed() {
      return request.auth != null;
    }

    match /users/{userId} {
      // A user can read and write to their own user document
      allow read, write: if isAuthed() && request.auth.uid == userId;
    }

    match /trees/{treeId} {
      // A user can create a tree if they are logged in and they are the owner
      allow create: if isAuthed() && request.resource.data.ownerId == request.auth.uid;
      
      // A user can read, update, or delete a tree if they are the owner
      // This rule works for single document reads and for the dashboard query
      allow read, update, delete: if isAuthed() && resource.data.ownerId == request.auth.uid;

      match /people/{personId} {
        // A user can read/write to the people subcollection if they own the parent tree
        allow read, write: if isAuthed() && get(/databases/$(database)/documents/trees/$(treeId)).data.ownerId == request.auth.uid;
      }
    }
  }
}
