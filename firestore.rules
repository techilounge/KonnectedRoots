rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // A user can read and write to a tree document if they are the owner.
    match /trees/{treeId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerId;

      // A user can read and write to the 'people' subcollection within a tree
      // if they are the owner of the parent tree document.
      match /people/{personId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/trees/$(treeId)).data.ownerId == request.auth.uid;
      }
    }
  }
}
