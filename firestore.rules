rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check for authentication
    function authed() {
      return request.auth != null;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Users can only read their own profile
      allow read: if authed() && request.auth.uid == userId;

      // Allow users to create their own profile document
      allow create: if authed() && request.auth.uid == userId;

      // Allow users to update their own profile, BUT NOT their plan or entitlements
      allow update: if authed() && request.auth.uid == userId
        && request.resource.data.plan == resource.data.plan
        && request.resource.data.entitlements == resource.data.entitlements; // Corrected typo here
      
      // Allow users to delete their own account data
      allow delete: if authed() && request.auth.uid == userId;
    }

    // Rules for the 'trees' collection and its subcollections
    match /trees/{treeId} {
      // Allow create if the user is authenticated and the ownerId matches their uid.
      allow create: if authed() && request.resource.data.ownerId == request.auth.uid;

      // Allow read and delete if the user is the owner of the tree.
      allow read, delete: if authed() && resource.data.ownerId == request.auth.uid;
      
      // Allow update if the user is the owner AND the ownerId is not being changed.
      allow update: if authed() && resource.data.ownerId == request.auth.uid
        && request.resource.data.ownerId == resource.data.ownerId; // ownerId is immutable

      // Rules for the 'people' subcollection within a tree
      match /people/{personId} {
        // Anyone who can read/write the parent tree (the owner) can do the same for people.
        allow read, write: if authed() && get(/databases/$(database)/documents/trees/$(treeId)).data.ownerId == request.auth.uid;
      }
    }
  }
}
