rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if a user is authenticated
    function authed() {
      return request.auth != null;
    }

    // Allow public read access to all files. 
    // This is common for profile pictures and other non-sensitive assets.
    match /{allPaths=**} {
      allow read;
    }

    // Explicitly allow authenticated users to write to the designated path for tree data.
    // This is more secure and specific than a general write rule.
    match /trees/{treeId}/people/{personId}/{fileName} {
      allow write: if authed();
    }
  }
}
